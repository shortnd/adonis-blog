<h2>Create Post</h2>

<form action="{{ route('posts.store') }}" method="POST">
  {{ csrfField() }}
  <div>
    <label for="title">Title</label>
    <input type="text" name="title" id="title">
  </div>
  <div>
    <label for="body">Body</label>
    <textarea name="body" id="body"></textarea>
  </div>
  <div>
    <button type="submit">Add Post</button>
  </div>
</form>
